[xdebug]
xdebug.cli_color = 1
xdebug.var_display_max_depth = 20
xdebug.overload_var_dump = On
xdebug.remote_host = <% node['php']['xdebug']['remote_host'] %>
xdebug.remote_log = /tmp/xdebug.log
xdebug.remote_enable = 1

<% if File.exist?("/usr/lib64/php/extensions/no-debug-non-zts-20151012/xdebug.so") %>
